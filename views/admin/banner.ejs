<%- include('../adminlayout/header.ejs'); -%>



<div class="container tm-mt-big tm-mb-big">
  <div class="row">
      <div class="col-sm-12 col-md-12 col-lg-6 col-xl-6 tm-block-col">
          <div class="tm-bg-primary-dark tm-block tm-block-product-categories">
            <h2 class="tm-block-title">Banners</h2>
            <div class="tm-product-table-container">
              <table class="table tm-table-small tm-product-table">
                  <thead >
                    <tr class="">
                      <th scope="col">Image</th>                                  
                      <th scope="col">Title</th>
                      <th scope="col">Delete</th>                                  

                    </tr>
                  </thead>
                  <tbody>
                    <tr class="">
                      <%if(bannerDetails.length!=0){%>
                        <% for(let i=0;i<bannerDetails.length;i++){%>
                           <td><img src="/images/<%=bannerDetails[i].images %>" alt="" style="width: 70px; height: 70px;"> </td>                                                                                    
                        <td><%=bannerDetails[i].title %></td>
                         <td>
                          <a href="/admin/deleteBanner?delete=<%=bannerDetails[i]._id %>" id="del" class="tm-product-delete-link">
                            <i class="far fa-trash-alt tm-product-delete-icon"></i>
                            </a>
                           
                         </td> 
                      </tr>
                      <%  } %>
                       

                   <% }else{%>
                    <tr>
                      <td class="tm-product-name">did'nt have any Banner</td>
                     </tr>
                   <%}%>

                        
                     
                </tbody>
              </table>
            </div>

          </div>
        </div>
 


      <div class="col-xl-6 col-lg-6 col-md-12 col-sm-12 mx-auto">
        <div class="tm-bg-primary-dark tm-block tm-block-h-auto">
          <div class="row">
            <div class="col-12">
              <h2 class="tm-block-title d-inline-block">Add Banner</h2>
            </div>
          </div>
          <div class="row">
           
          
          <div class="row tm-edit-product-row">
            <div class="col-xl-6 col-lg-6 col-md-12">
              <form action="/admin/banner" class="tm-edit-product-form" method="post" enctype="multipart/form-data">

                <div class="form-group mb-3">
                  <label
                    for="name"
                    >Title
                  </label>
                  <input
                    id="name"
                    name="name"
                    type="text"
                    class="form-control validate"
                    required
                  />
                </div>
                <div class="form-group mb-3">
                    <label
                      for="name"
                      >Sub title
                    </label>
                    <input
                      id="name"
                      name="subtitle"
                      type="text"
                      class="form-control validate"
                      required
                    />
                  </div>
                
                <div class="form-group mb-3">
                  <label
                    for="description"
                    >Description</label
                  >
                  <textarea
                    class="form-control validate"
                    rows="3"
                    required
                    name="description"
                  ></textarea>
                </div>
                
                
                
                
            </div>
            <div class="col-xl-6 col-lg-6 col-md-12 mx-auto mb-4">
              <div class="tm-product-img-dummy mx-auto" style="height: 180px;">
                <i
                  class="fas fa-cloud-upload-alt tm-upload-icon"
                  onclick="document.getElementById('fileInput').click();"
                ></i>
              </div>
              <div class="custom-file mt-3 mb-3">
                <input required id="fileInput" name="images" type="file" style="display:none;" multiple/>
                <input
                  type="button"
                  class="btn btn-primary btn-block mx-auto"
                  value="UPLOAD PRODUCT IMAGE"
                  required
                  onclick="document.getElementById('fileInput').click();"
                />
              </div>
            
            </div>
            <div class="col-12">
              <button type="submit" class="btn btn-primary btn-block text-uppercase">Add Product Now</button>
            </div>
          </form>
          </div>
        </div>
      </div>
    </div>
  </div>


  </div>
</div>

<%- include('../adminlayout/footer.ejs'); -%>

