<%- include('../layouts/header.ejs',{session}); -%>
<style>
    body {
        background: #f7f7ff;
        margin-top: 20px;
        padding: 0;
        margin: 0;
    }

    .card {
        position: relative;
        display: flex;
        flex-direction: column;
        min-width: 0;
        word-wrap: break-word;
        background-color: #fff;
        background-clip: border-box;
        border: 0 solid transparent;
        border-radius: .25rem;
        margin-bottom: 1.5rem;
        box-shadow: 0 2px 6px 0 rgb(218 218 253 / 65%), 0 2px 6px 0 rgb(206 206 238 / 54%);
    }

    .me-2 {
        margin-right: .5rem !important;
    }
</style>
<div class="container">
    <div class="main-body">
        <div class="row gutters-sm">
            <div class="col-md-4 mb-3">
                <div class="card">
                    <div class="card-body">
                        <div class="d-flex flex-column align-items-center text-center">
                            <img src="https://bootdey.com/img/Content/avatar/avatar7.png" alt="Admin"
                                class="rounded-circle" width="150">
                            <div class="mt-3">
                                <h4><%=user.name%></h4>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-8">
                <div class="card">
                    <% if (user.address.length>0) { 
                    for( let i = 0; i < user.address.length; i++ ) { %>
                    <div class="card-body">
                        <hr>
                        <div class="row mb-3 mt-4">
                            <div class="col-sm-3">
                                <h6 class="mb-0">NAME</h6>
                            </div>
                            <div class="col-sm-3">
                                <h6 class="mb-0">: <%=user.address[i].name%></h6>
                            </div>
                        </div>
                      
                        <div class="row mb-3">
                            <div class="col-sm-3">
                                <h6 class="mb-0">HOUSE NAME</h6>
                            </div>
                            <div class="col-sm-3">
                                <h6 class="mb-0">:<%=user.address[i].houseName%></h6>
                            </div>
                        </div>

                       
                        <div class="row mb-3">
                            <div class="col-sm-3">
                                <h6 class="mb-0">TOWN/CITY</h6>
                            </div>
                            <div class="col-sm-3">
                                <h6 class="mb-0">:<%=user.address[i].townCity%></h6>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-sm-3">
                                <h6 class="mb-0">DISTRICT</h6>
                            </div>
                            <div class="col-sm-3">
                                <h6 class="mb-0">:<%=user.address[i].district%></h6>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-sm-3">
                                <h6 class="mb-0">STATE</h6>
                            </div>
                            <div class="col-sm-3">
                                <h6 class="mb-0">:<%=user.address[i].state%></h6>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-sm-3">
                                <h6 class="mb-0">PIN CODE</h6>
                            </div>
                            <div class="col-sm-3">
                                <h6 class="mb-0">:<%=user.address[i].pincode%></h6>
                            </div>
                        </div>
                     
                        <div class="row mb-3">
                            <div class="col-sm-3">
                                <h6 class="mb-0">MOBILE NUMBER</h6>
                            </div>
                            <div class="col-sm-3">
                                <h6 class="mb-0">:<%=user.address[i].mobileNo%></h6>
                            </div>
                        </div>
                        <%if(is_show===1){%>
                            <div class="float-end">
                            <a href="/editAddress?id=<%=user.address[i]._id%>&index=<%=i%>" class="btn btn-primary ">Edit Address</a>
                            <a href="/deleteAddress?id=<%=user.address[i]._id%>" class="btn btn-danger ">Delete Address</a>
                            <a href="/checkout?id=<%=user.address[i]._id%>" class="btn btn-warning ">Use Address</a>
                        </div>
                        <%}else{%>
                            <div class="float-end">
                            <a href="/editAddress?id=<%=user.address[i]._id%>&index=<%=i%>" class="btn btn-primary ">Edit Address</a>
                            <a href="/deleteAddress?id=<%=user.address[i]._id%>" class="btn btn-danger ">Delete Address</a>
                        </div>
                        <%}%>

                    </div>
                    <%}}else{  %>
                        <h3>No address available</h3>
                    <%}%>
                    <hr>
                    <a href="/addAddress" style="width: 25%;margin: auto;" class="btn btn-success px-4 mb-3 mt-3">Add
                        New Address</a>
                    <hr>

                </div>
                <% if (message != null) { %>
                                        <script>
                                              swal({
                                                title: "Success!",
                                                text: " <%= message %> ",
                                                icon: "success",
                                                timer:2000,
                                                showConfirmButton: false
                                              })
                                      </script>
                                      <% } %>
            </div>
        </div>
    </div>
</div>
<%- include('../layouts/footer.ejs'); -%>